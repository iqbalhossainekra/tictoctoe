<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        android:gravity="center"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button3"/>
        <Button
                android:layout_margin="10dp"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button2"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button6"/>
        <Button
                android:layout_margin="10dp"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button5"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button4"/>
    </TableRow>
    <TableRow
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button9"/>
        <Button
                android:layout_margin="10dp"
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button7"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt" android:id="@+id/button8"/>
    </TableRow>
</TableLayout>